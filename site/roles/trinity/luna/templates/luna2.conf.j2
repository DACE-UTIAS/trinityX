# Generated by ansible

[HOSTS]
; used in cluster, "clusterips" for templates
; Kindly add another Controller By Increasing the Number
CONTROLLER = controller:{{ luna2_cluster.frontend_address }}
#CONTROLLER = controller:10.141.255.254
; CONTROLLER1 = controller1:10.141.255.254
; CONTROLLER2 = None
SERVERPORT = 7050
NODELIST = node[001-004]

[NETWORKS]
; ipmi and ib default is empty or None
; cluster is the default internal cluster network
{% for network in luna2_cluster['networks'] %}
{% if 'start_ip' in network %}
{{ network.name }} = {{ network.ip }}/{{ network.prefix }}:DHCP:{{ network.start_ip }}-{{ network.end_ip }}
{% else %}
{{ network.name }} = {{ network.ip }}/{{ network.prefix }}
{% endif %}
{% endfor %}
#cluster = 10.141.0.0/16:DHCP:10.141.155.0-10.141.165.0
#ipmi = 10.148.0.0/16
#ib = 10.149.0.0/16

[GROUPS]
NAME = compute

[OSIMAGE]
NAME = compute
PATH = /trinity/images/compute

[BMCSETUP]
NAME = compute
USERNAME = admin
PASSWORD = password


